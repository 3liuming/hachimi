<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hachimiCli.mapper.UserMapper_Cli">
    <resultMap type="UserDto" id="UserResult">
        <result property="userId" column="user_id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="phone" column="phone" />
        <result property="role" column="role" />
        <result property="status" column="status" />
        <result property="hidden" column="hidden" />
    </resultMap>

    <sql id="selectUserVo">
        select user_id, username, password, phone, role, status, hidden from user
    </sql>

    <!-- 查询用户是否存在 -->
    <select id="selectUserByUsername" parameterType="String" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where username = #{username} and hidden = '0' and status = '0' limit 1
    </select>

    <!-- 注册 -->
    <insert id="insertUser" parameterType="UserDto" useGeneratedKeys="true" keyProperty="userId">
        insert into user (username, password, phone)
        values (#{username}, #{password}, #{phone})
    </insert>

    <!-- 登录 -->
    <select id="selectUserForLogin" parameterType="UserDto" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where username = #{username} and hidden = '0' and status = '0' limit 1
    </select>

    <select id="selectPasswordByUserName" parameterType="String" resultType="String">
        select password from user where username = #{username} and hidden = '0' and status = '0' limit 1
    </select>
</mapper>
