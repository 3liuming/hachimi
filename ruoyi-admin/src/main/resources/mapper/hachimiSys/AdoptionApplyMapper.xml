<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hachimiSys.mapper.AdoptionApplyMapper">
    
    <resultMap type="AdoptionApply" id="AdoptionApplyResult">
        <result property="applyId"    column="apply_id"    />
        <result property="userId"    column="user_id"    />
        <result property="petId"    column="pet_id"    />
        <result property="applyReason"    column="apply_reason"    />
        <result property="applyTime"    column="apply_time"    />
        <result property="auditUserId"    column="audit_user_id"    />
        <result property="auditStatus"    column="audit_status"    />
        <result property="auditRemark"    column="audit_remark"    />
        <result property="auditTime"    column="audit_time"    />
        <result property="adoptTime"    column="adopt_time"    />
        <result property="hidden"    column="hidden"    />
    </resultMap>

    <sql id="selectAdoptionApplyVo">
        select apply_id, user_id, pet_id, apply_reason, apply_time, audit_user_id, audit_status, audit_remark, audit_time, adopt_time, hidden from adoption_apply
    </sql>

    <select id="selectAdoptionApplyList" parameterType="AdoptionApply" resultMap="AdoptionApplyResult">
        <include refid="selectAdoptionApplyVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="petId != null "> and pet_id like concat('%', #{petId}, '%')</if>
            <if test="auditUserId != null "> and audit_user_id = #{auditUserId}</if>
        </where>
    </select>
    
    <select id="selectAdoptionApplyByApplyId" parameterType="Long" resultMap="AdoptionApplyResult">
        <include refid="selectAdoptionApplyVo"/>
        where apply_id = #{applyId}
    </select>

    <insert id="insertAdoptionApply" parameterType="AdoptionApply" useGeneratedKeys="true" keyProperty="applyId">
        insert into adoption_apply
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="petId != null">pet_id,</if>
            <if test="applyReason != null">apply_reason,</if>
            <if test="applyTime != null">apply_time,</if>
            <if test="auditUserId != null">audit_user_id,</if>
            <if test="auditStatus != null">audit_status,</if>
            <if test="auditRemark != null">audit_remark,</if>
            <if test="auditTime != null">audit_time,</if>
            <if test="adoptTime != null">adopt_time,</if>
            <if test="hidden != null">hidden,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="petId != null">#{petId},</if>
            <if test="applyReason != null">#{applyReason},</if>
            <if test="applyTime != null">#{applyTime},</if>
            <if test="auditUserId != null">#{auditUserId},</if>
            <if test="auditStatus != null">#{auditStatus},</if>
            <if test="auditRemark != null">#{auditRemark},</if>
            <if test="auditTime != null">#{auditTime},</if>
            <if test="adoptTime != null">#{adoptTime},</if>
            <if test="hidden != null">#{hidden},</if>
         </trim>
    </insert>

    <update id="updateAdoptionApply" parameterType="AdoptionApply">
        update adoption_apply
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="petId != null">pet_id = #{petId},</if>
            <if test="applyReason != null">apply_reason = #{applyReason},</if>
            <if test="applyTime != null">apply_time = #{applyTime},</if>
            <if test="auditUserId != null">audit_user_id = #{auditUserId},</if>
            <if test="auditStatus != null">audit_status = #{auditStatus},</if>
            <if test="auditRemark != null">audit_remark = #{auditRemark},</if>
            <if test="auditTime != null">audit_time = #{auditTime},</if>
            <if test="adoptTime != null">adopt_time = #{adoptTime},</if>
            <if test="hidden != null">hidden = #{hidden},</if>
        </trim>
        where apply_id = #{applyId}
    </update>

    <delete id="deleteAdoptionApplyByApplyId" parameterType="Long">
        delete from adoption_apply where apply_id = #{applyId}
    </delete>

    <delete id="deleteAdoptionApplyByApplyIds" parameterType="String">
        delete from adoption_apply where apply_id in 
        <foreach item="applyId" collection="array" open="(" separator="," close=")">
            #{applyId}
        </foreach>
    </delete>
</mapper>