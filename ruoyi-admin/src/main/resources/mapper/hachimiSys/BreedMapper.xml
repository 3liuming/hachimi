<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hachimiSys.mapper.BreedMapper">
    
    <resultMap type="Breed" id="BreedResult">
        <result property="breedId"    column="breed_id"    />
        <result property="breedName"    column="breed_name"    />
        <result property="species"    column="species"    />
        <result property="hidden"    column="hidden"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBreedVo">
        select breed_id, breed_name, species, hidden, create_time from breed
    </sql>

    <select id="selectBreedList" parameterType="Breed" resultMap="BreedResult">
        <include refid="selectBreedVo"/>
        <where>  
            <if test="breedName != null  and breedName != ''"> and breed_name like concat('%', #{breedName}, '%')</if>
            <if test="species != null  and species != ''"> and species like concat('%', #{species}, '%')</if>
        </where>
    </select>
    
    <select id="selectBreedByBreedId" parameterType="Long" resultMap="BreedResult">
        <include refid="selectBreedVo"/>
        where breed_id = #{breedId}
    </select>

    <insert id="insertBreed" parameterType="Breed" useGeneratedKeys="true" keyProperty="breedId">
        insert into breed
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="breedName != null and breedName != ''">breed_name,</if>
            <if test="species != null">species,</if>
            <if test="hidden != null">hidden,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="breedName != null and breedName != ''">#{breedName},</if>
            <if test="species != null">#{species},</if>
            <if test="hidden != null">#{hidden},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBreed" parameterType="Breed">
        update breed
        <trim prefix="SET" suffixOverrides=",">
            <if test="breedName != null and breedName != ''">breed_name = #{breedName},</if>
            <if test="species != null">species = #{species},</if>
            <if test="hidden != null">hidden = #{hidden},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where breed_id = #{breedId}
    </update>

    <delete id="deleteBreedByBreedId" parameterType="Long">
        delete from breed where breed_id = #{breedId}
    </delete>

    <delete id="deleteBreedByBreedIds" parameterType="String">
        delete from breed where breed_id in 
        <foreach item="breedId" collection="array" open="(" separator="," close=")">
            #{breedId}
        </foreach>
    </delete>
</mapper>