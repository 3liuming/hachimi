<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hachimi_admin.mapper.PetHealthRecordMapper">

    <resultMap type="PetHealthRecord" id="PetHealthRecordResult">
        <result property="healthId"    column="health_id"    />
        <result property="petId"    column="pet_id"    />
        <result property="petName"    column="pet_name"    />
        <result property="recordType"    column="record_type"    />
        <result property="content"    column="content"    />
        <result property="doctor"    column="doctor"    />
        <result property="hospital"    column="hospital"    />
        <result property="recordTime"    column="record_time"    />
        <result property="createUserId"    column="create_user_id"    />
        <result property="createUserName"    column="create_user_name"    />
        <result property="hidden"    column="hidden"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>
    <resultMap id="PetHealthRecordPetResult" type="PetHealthRecord" extends="PetHealthRecordResult">
        <collection property="petList" ofType="Pet" column="health_id" select="selectPetList" />
    </resultMap>

    <resultMap type="Pet" id="PetResult">
        <result property="petId"    column="pet_id"    />
        <result property="petName"    column="pet_name"    />
        <result property="age"    column="age"    />
        <result property="gender"    column="gender"    />
        <result property="healthStatus"    column="health_status"    />
        <result property="personality"    column="personality"    />
        <result property="rescueTime"    column="rescue_time"    />
        <result property="rescuePlace"    column="rescue_place"    />
        <result property="status"    column="status"    />
        <result property="hidden"    column="hidden"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="breedId"    column="breed_id"    />
    </resultMap>

    <sql id="selectPetHealthRecordVo">
        select
            h.health_id, h.pet_id, h.record_type, h.content, h.doctor,
            h.hospital, h.record_time, h.create_user_id, h.hidden, h.create_time,
            p.pet_name,
            u.username as create_user_name
        from pet_health_record h
                 left join pet p on h.pet_id = p.pet_id
                 left join user u on h.create_user_id = u.user_id
    </sql>

    <select id="selectPetHealthRecordList" parameterType="PetHealthRecord" resultMap="PetHealthRecordResult">
        <include refid="selectPetHealthRecordVo"/>
        <where>  
            <if test="recordType != null "> and record_type = #{recordType}</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
            <if test="doctor != null  and doctor != ''"> and doctor = #{doctor}</if>
            <if test="hospital != null  and hospital != ''"> and hospital = #{hospital}</if>
            <if test="createUserId != null "> and create_user_id = #{createUserId}</if>
        </where>
    </select>

    <select id="selectPetHealthRecordByHealthId" parameterType="Long" resultMap="PetHealthRecordPetResult">
        select
            h.health_id, h.pet_id, h.record_type, h.content, h.doctor,
            h.hospital, h.record_time, h.create_user_id, h.hidden, h.create_time,
            p.pet_name,
            u.username as create_user_name
        from pet_health_record h
                 left join pet p on h.pet_id = p.pet_id
                 left join user u on h.create_user_id = u.user_id
        where h.health_id = #{healthId}
    </select>

    <select id="selectPetList" resultMap="PetResult">
        select pet_id, pet_name, age, gender, health_status, personality, rescue_time, rescue_place, status, hidden, create_time, update_time, breed_id
        from pet
        where pet_id = #{pet_id}
    </select>

    <insert id="insertPetHealthRecord" parameterType="PetHealthRecord" useGeneratedKeys="true" keyProperty="healthId">
        insert into pet_health_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="petId != null">pet_id,</if>
            <if test="recordType != null">record_type,</if>
            <if test="content != null">content,</if>
            <if test="doctor != null">doctor,</if>
            <if test="hospital != null">hospital,</if>
            <if test="recordTime != null">record_time,</if>
            <if test="createUserId != null">create_user_id,</if>
            <if test="hidden != null">hidden,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="petId != null">#{petId},</if>
            <if test="recordType != null">#{recordType},</if>
            <if test="content != null">#{content},</if>
            <if test="doctor != null">#{doctor},</if>
            <if test="hospital != null">#{hospital},</if>
            <if test="recordTime != null">#{recordTime},</if>
            <if test="createUserId != null">#{createUserId},</if>
            <if test="hidden != null">#{hidden},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updatePetHealthRecord" parameterType="PetHealthRecord">
        update pet_health_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="petId != null">pet_id = #{petId},</if>
            <if test="recordType != null">record_type = #{recordType},</if>
            <if test="content != null">content = #{content},</if>
            <if test="doctor != null">doctor = #{doctor},</if>
            <if test="hospital != null">hospital = #{hospital},</if>
            <if test="recordTime != null">record_time = #{recordTime},</if>
            <if test="createUserId != null">create_user_id = #{createUserId},</if>
            <if test="hidden != null">hidden = #{hidden},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where health_id = #{healthId}
    </update>

    <delete id="deletePetHealthRecordByHealthId" parameterType="Long">
        delete from pet_health_record where health_id = #{healthId}
    </delete>

    <delete id="deletePetHealthRecordByHealthIds" parameterType="String">
        delete from pet_health_record where health_id in 
        <foreach item="healthId" collection="array" open="(" separator="," close=")">
            #{healthId}
        </foreach>
    </delete>
    
    <delete id="deletePetByPetIds" parameterType="String">
        delete from pet where pet_id in 
        <foreach item="petId" collection="array" open="(" separator="," close=")">
            #{petId}
        </foreach>
    </delete>

    <delete id="deletePetByPetId" parameterType="Long">
        delete from pet where pet_id = #{petId}
    </delete>

    <insert id="batchPet">
        insert into pet( pet_id, pet_name, age, gender, health_status, personality, rescue_time, rescue_place, status, hidden, create_time, update_time, breed_id) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.petId}, #{item.petName}, #{item.age}, #{item.gender}, #{item.healthStatus}, #{item.personality}, #{item.rescueTime}, #{item.rescuePlace}, #{item.status}, #{item.hidden}, #{item.createTime}, #{item.updateTime}, #{item.breedId})
        </foreach>
    </insert>
</mapper>