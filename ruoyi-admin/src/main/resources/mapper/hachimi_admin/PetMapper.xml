<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hachimi_admin.mapper.PetMapper">

    <resultMap type="Pet" id="PetResult">
        <result property="petId"    column="pet_id"    />
        <result property="petName"    column="pet_name"    />
        <result property="age"    column="age"    />
        <result property="gender"    column="gender"    />
        <result property="healthStatus"    column="health_status"    />
        <result property="personality"    column="personality"    />
        <result property="rescueTime"    column="rescue_time"    />
        <result property="rescuePlace"    column="rescue_place"    />
        <result property="status"    column="status"    />
        <result property="hidden"    column="hidden"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="breedId"    column="breed_id"    />
        <result property="breedName"    column="breed_name"    />
    </resultMap>

    <resultMap id="PetBreedResult" type="Pet" extends="PetResult">
        <collection property="breedList" ofType="Breed" column="pet_id" select="selectBreedList" />
    </resultMap>

    <resultMap type="Breed" id="BreedResult">
        <result property="breedId"    column="breed_id"    />
        <result property="breedName"    column="breed_name"    />
        <result property="species"    column="species"    />
        <result property="hidden"    column="hidden"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectPetVo">
        select
            p.pet_id, p.pet_name, p.age, p.gender, p.health_status,
            p.personality, p.rescue_time, p.rescue_place, p.status,
            p.hidden, p.create_time, p.update_time, p.breed_id,
            b.breed_name
        from pet p
                 left join breed b on p.breed_id = b.breed_id
    </sql>

    <select id="selectPetList" parameterType="Pet" resultMap="PetResult">
        <include refid="selectPetVo"/>
        <where>  
            <if test="petName != null  and petName != ''"> and pet_name like concat('%', #{petName}, '%')</if>
            <if test="age != null "> and age = #{age}</if>
            <if test="gender != null "> and gender = #{gender}</if>
            <if test="rescuePlace != null  and rescuePlace != ''"> and rescue_place = #{rescuePlace}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>

    <select id="selectPetByPetId" parameterType="Long" resultMap="PetBreedResult">
        select
            p.pet_id, p.pet_name, p.age, p.gender, p.health_status,
            p.personality, p.rescue_time, p.rescue_place, p.status,
            p.hidden, p.create_time, p.update_time, p.breed_id,
            b.breed_name
        from pet p
                 left join breed b on p.breed_id = b.breed_id
        where p.pet_id = #{petId}
    </select>

    <select id="selectBreedList" resultMap="BreedResult">
        select breed_id, breed_name, species, hidden, create_time
        from breed
        where breed_id = #{breed_id}
    </select>

    <insert id="insertPet" parameterType="Pet" useGeneratedKeys="true" keyProperty="petId">
        insert into pet
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="petName != null">pet_name,</if>
            <if test="age != null">age,</if>
            <if test="gender != null">gender,</if>
            <if test="healthStatus != null">health_status,</if>
            <if test="personality != null">personality,</if>
            <if test="rescueTime != null">rescue_time,</if>
            <if test="rescuePlace != null">rescue_place,</if>
            <if test="status != null">status,</if>
            <if test="hidden != null">hidden,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="breedId != null">breed_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="petName != null">#{petName},</if>
            <if test="age != null">#{age},</if>
            <if test="gender != null">#{gender},</if>
            <if test="healthStatus != null">#{healthStatus},</if>
            <if test="personality != null">#{personality},</if>
            <if test="rescueTime != null">#{rescueTime},</if>
            <if test="rescuePlace != null">#{rescuePlace},</if>
            <if test="status != null">#{status},</if>
            <if test="hidden != null">#{hidden},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="breedId != null">#{breedId},</if>
         </trim>
    </insert>

    <update id="updatePet" parameterType="Pet">
        update pet
        <trim prefix="SET" suffixOverrides=",">
            <if test="petName != null">pet_name = #{petName},</if>
            <if test="age != null">age = #{age},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="healthStatus != null">health_status = #{healthStatus},</if>
            <if test="personality != null">personality = #{personality},</if>
            <if test="rescueTime != null">rescue_time = #{rescueTime},</if>
            <if test="rescuePlace != null">rescue_place = #{rescuePlace},</if>
            <if test="status != null">status = #{status},</if>
            <if test="hidden != null">hidden = #{hidden},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="breedId != null">breed_id = #{breedId},</if>
        </trim>
        where pet_id = #{petId}
    </update>

    <delete id="deletePetByPetId" parameterType="Long">
        delete from pet where pet_id = #{petId}
    </delete>

    <delete id="deletePetByPetIds" parameterType="String">
        delete from pet where pet_id in 
        <foreach item="petId" collection="array" open="(" separator="," close=")">
            #{petId}
        </foreach>
    </delete>
    
    <delete id="deleteBreedByBreedIds" parameterType="String">
        delete from breed where breed_id in 
        <foreach item="breedId" collection="array" open="(" separator="," close=")">
            #{breedId}
        </foreach>
    </delete>

    <delete id="deleteBreedByBreedId" parameterType="Long">
        delete from breed where breed_id = #{breedId}
    </delete>

    <insert id="batchBreed">
        insert into breed( breed_id, breed_name, species, hidden, create_time) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.breedId}, #{item.breedName}, #{item.species}, #{item.hidden}, #{item.createTime})
        </foreach>
    </insert>
</mapper>